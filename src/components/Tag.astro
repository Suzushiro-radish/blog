---
type Props = {
	tag: string;
};

const { tag } = Astro.props;
---

<p class="tag">
	<a href={`/tags/${tag}`}>{tag}</a>
</p>
<style>
	.tag {
		margin: 0.25em;
		border: dotted 1px #a1a1a1;
		border-radius: 0.5em;
		padding: 0.5em 1em;
		font-size: 1.15em;
		background-color: #f8fcfd;
	}

	a {
		color: #00539f;
	}
</style>
