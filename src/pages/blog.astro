---
import BlogPost from "../components/BlogPost.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
const pageTitle = "Blog";
---

<BaseLayout pageTitle={pageTitle}>
	<h2>This is my new blog page!</h2>
	<p>
		I am working through Astro's introductory tutorial. This is the third page on my website, and it
		will become my first ever blog!
	</p>
	<ul>
		{allPosts.map((post) => <BlogPost title={post.frontmatter.title} url={post.url} />)}
	</ul>
</BaseLayout>
