---
import Tag from "../components/Tag.astro";
import BaseLayout from "./BaseLayout.astro";

type Props = {
	frontmatter: {
		title: string;
		pubDate: string;
		author: string;
		description: string;
		image: Image;
		tags: string[];
	};
};
type Image = {
	url: string;
	alt: string;
};

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
	<p>Published on: {new Date(frontmatter.pubDate).toLocaleDateString("ja")}</p>
	<p><em>{frontmatter.description}</em></p>
	<p>Written by {frontmatter.author}</p>
	<slot />
	<div class="tags">
		{frontmatter.tags.map((tag) => <Tag tag={tag} />)}
	</div>
</BaseLayout>

<style>
	.tags {
		display: flex;
		flex-wrap: wrap;
	}
</style>
