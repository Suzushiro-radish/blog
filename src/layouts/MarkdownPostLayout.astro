---
import Footer from "../components/Footer.astro";

type Props = {
	frontmatter: {
		title: string;
		pubDate: string;
		author: string;
		description: string;
		image: Image;
	};
};
type Image = {
	url: string;
	alt: string;
};

const { frontmatter } = Astro.props;
---

<h1>{frontmatter.title}</h1>
<p>Published on: {new Date(frontmatter.pubDate).toLocaleDateString("ja")}</p>
<p><em>{frontmatter.description}</em></p>
<p>Written by {frontmatter.author}</p>
<slot />
<Footer />
